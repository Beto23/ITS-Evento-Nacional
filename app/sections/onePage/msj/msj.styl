.Msj
	display flex
	justify-content center
	align-items center
	&-content
		display flex
		justify-content center
		align-items center
	&-txt
		width 50em
		padding 1em 3em
		text-align justify
		p:last-child
			text-align center
	&-carousel
		width 100%
		height 30em
		margin 0
	&-img
		background-size cover
		background-position center
		height: 100%;
		width: 100%;

@media(max-width 800px)
	.Msj-content
		flex-direction column
		.Msj-txt
			width 95%
			padding 0

