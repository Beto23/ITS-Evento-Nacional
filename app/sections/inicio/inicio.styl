.Inicio
	display flex
	align-items center
	justify-content center
	height 100vh
	&-content
		display flex
		width 80%
		max-width 1200px
	&-msj
		padding 3em
		min-width 40em
		width 50%
		background white
		line-height 2em
		p
			margin-bottom 1em
			&:last-child
				text-align center
				margin-top 1em
				margin-bottom 0
	&-slider
		width 100%
		background green
		position relative
		.Slider
			overflow hidden
			display flex
			position: relative
			li
				position absolute
				left 0
				right 0
				margin-right 100%
			.indicadores
				position absolute
				bottom 0
				left 0
				right 0
				height 2em