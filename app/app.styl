@import 'nib'
$guindo = #980e0e;

body
	font-size 16px
	font-family 'Open Sans'
*
	box-sizing border-box
	outline none
a
	color inherit
	text-decoration none
li
	list-style none
b
	font-weight bold
.boxShadow{
	padding: 0em 2em;
	box-shadow:  0px 3px 7px 0px rgba(50, 50, 50, 0.31);
}
.Popup
	transition all 0.5s ease
	position fixed
	top 100%
	bottom 0
	left 25%
	right 25%
	z-index 1000
	background rgba(black, .8);
	i.close
		color white
		font-size 3em
		position fixed
		top 1em
		right 1em
		z-index 1001
		color transparent
		transition color 1s ease
		cursor pointer
		user-select: none;
.Popup-on
	top 0
	left 0
	right 0
	i.close
		color white
.Portada
	position fixed
	z-index 100
	top 0
	left 0
	right 0
	bottom 0
	background-image url(./img/portadaITS.jpg)
	background-size cover
	background-repeat no-repeat
	background-position center center
	display flex
	align-items center
	justify-content center
	&-title
		padding 2em
		background rgba(white, 0.7)
		border-top 2px solid $guindo
		border-bottom 2px solid $guindo
		color $guindo

@import './components/header/header'
@import './sections/inicio/inicio'
@import './sections/convocatoria/convocatoria'
