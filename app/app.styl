$guindo = #980e0e;

body
	font-size 16px
	font-family 'Open Sans'
*
	box-sizing border-box
	outline none
a
	color inherit
	text-decoration none
li
	list-style none
b,h1,h2,h3,h4,h5,h6
	font-weight bold
p
	line-height 1.5
	margin-bottom 1em
	&:last-child
		margin-bottom 0
.boxShadow
	padding: 0em 2em;
	box-shadow:  0px 3px 7px 0px rgba(50, 50, 50, 0.31);

wrapper(mw,w)
	margin 0 auto
	max-width mw
	width w
	
.u-wrapper-90
	wrapper(900px,90%)

.u-wrapper-80
	wrapper(800px,80%)
	
.u-wrapper-50
	wrapper(500px,50%)
.gris
	background #EBEBEB
@import './components/header/header'
@import './sections/convocatoria/convocatoria'
@import './sections/programa/programa'

@import './sections/onePage/inicio/inicio'
@import './sections/onePage/msj/msj'
@import './sections/onePage/propositos/propositos'
