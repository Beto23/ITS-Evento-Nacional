.Msj
	display flex
	justify-content center
	align-items center
	&-content
		display flex
		justify-content center
		align-items center
	&-txt
		width 50em
		padding 1em 3em
		text-align justify
		p:last-child
			text-align center
	&-carousel
		width 100%
		height 30em
		margin 0
	&-img
		background-image: url(img/banner.jpg)
		background-size 100% 100%
		background-position center
		height: 100%;
		width: 100%;
		figcaption
			position: absolute;
			bottom: 0;
			right: 0;
			left: 0;
			height 4em
			background rgba(152, 14, 14, 0.48);
			display: flex;
			justify-content: center;
			align-items: center;
			.btn-msj
				background: #CF242A !important;
				padding: .1em 1em !important;
				color: white;
				text-transform: uppercase;

@media(max-width 800px)
	.Msj
		&-content
			flex-direction column
			margin 1em 0
		&-txt
			width 95%
			padding 0
		&-img
			background-image: url(img/bannerH.jpg)
@media(max-width 440px)
	.Msj
		&-img
			background-image: url(img/banner.jpg)

