.Multimedia
	display flex
	align-items center
	justify-content center
	padding 1em
	ul
		display flex
		justify-content space-around
		flex-wrap wrap
		a
			margin-bottom 1em
	img
		height 10em
	.Multimedia-content
		height 0em
		transition all 0.5s ease
		background white
		margin-bottom 1em
		overflow hidden
		&.isOpen
			height 35em
	.Multimedia-type
		background #980e0e
		color white
		font-size 1.1em
		padding .8em .4em
		text-align left
		padding-left 1em
		position relative
		cursor: pointer
		overflow hidden
		transition all 0.5s ease
		i
			margin-right 1em
		&:after
			font normal normal normal 14px/1 FontAwesome
			content "\f063"
			position: absolute
			left 0
			right 0
			bottom 0
			top 100%
			padding-top 1em
			display flex
			align-items center
			justify-content center
			font-size 1.5em
			transition all 0.5s ease
		&:hover
			background #540808
			&:after
				top 0
				padding-top 0em
		&.isOpen
			background #540808
			&:after
				top 0
				padding-top 0em
				transform rotate(180deg)
	.Multimedia-content
		display flex
		flex-wrap wrap
		justify-content center
		align-items center
		.Galeria-img
			width 11em
			margin 1em
			text-align center
			padding .5em
			figure
				width 100%
				height 11em
				position relative
				background-size cover
				background-position center
				&:hover
					cursor: pointer
					&:after
						display flex
						justify-content center
						align-items center
						color white
						content "Ver m√°s"
						position absolute
						top 0
						left 0
						right 0
						bottom 0
						background rgba(black,0.7)
			h3
				font-weight bold
				margin .5em 0
.Popup
	position fixed
	top 0
	left 0
	right 0
	bottom 0
	background rgba(black, 0.9)
	display flex
	justify-content center
	align-items center
	z-index 500
	&-close
		position: fixed
		top .7em
		right .7em
		font-size 2.5em
		color white
		cursor: pointer
		z-index 501
	ul
		position: fixed
		left 4.5em
		right 4.5em
		top 3em
		bottom 3em
		display flex
		justify-content center
		align-items center
		overflow auto
		a
			margin .2em