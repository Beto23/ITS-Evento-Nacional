$guindo = #980e0e;

body
	font-size 16px
	font-family 'Open Sans'
*
	box-sizing border-box
	outline none
a
	color inherit
	text-decoration none
li
	list-style none
b,h1,h2,h3,h4,h5,h6
	font-weight bold
p
	line-height 1.5
	margin-bottom 1em
h2
		text-align: center;
		font-size: 1.5em;
		padding: 1em 0;
		line-height 1.5
		text-transform capitalize
	&:last-child
		margin-bottom 0
.btn
	background #980e0e !important
	margin-bottom 1em 
.boxShadow
	padding: 0em 2em;
	box-shadow:  0px 3px 7px 0px rgba(50, 50, 50, 0.31);

wrapper(mw,w)
	margin 0 auto
	max-width mw
	width w
	
.u-wrapper-90
	wrapper(900px,90%)

.u-wrapper-80
	wrapper(800px,80%)
	
.u-wrapper-50
	wrapper(500px,50%)
.gris
	background #EBEBEB
	
.md-tabs.md-default-theme md-ink-bar, md-tabs md-ink-bar
	color $guindo !important
	background $guindo !important
.md-tabs.md-default-theme .md-tab.md-active, md-tabs .md-tab.md-active, md-tabs.md-default-theme .md-tab.md-active md-icon, md-tabs .md-tab.md-active md-icon, md-tabs.md-default-theme .md-tab.md-focused, md-tabs .md-tab.md-focused, md-tabs.md-default-theme .md-tab.md-focused md-icon, md-tabs .md-tab.md-focused md-icon
	color $guindo !important
@import './components/header/header' 
@import './app/documentacion/documentacion'
@import './app/inicio/inicio'
@import './app/msj/msj'
@import './app/propositos/propositos'
@import './app/actividades/actividades'
@import './app/boletin/boletin'

.timeline > li > .timeline-badge
	z-index 1